{% if cinny_container_labels_traefik_enabled %}
traefik.enable=true

{% if cinny_container_labels_traefik_docker_network %}
traefik.docker.network={{ cinny_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if cinny_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ cinny_identifier }}-slashless-redirect.redirectregex.regex=^({{ cinny_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ cinny_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [cinny_identifier + '-slashless-redirect'] %}
{% endif %}

{% if cinny_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ cinny_identifier }}-strip-prefix.stripprefix.prefixes={{ cinny_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [cinny_identifier + '-strip-prefix'] %}
{% endif %}

{% if cinny_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in cinny_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ cinny_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [cinny_identifier + '-add-request-headers'] %}
{% endif %}

{% if cinny_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in cinny_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ cinny_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [cinny_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ cinny_identifier }}.rule={{ cinny_container_labels_traefik_rule }}
{% if cinny_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ cinny_identifier }}.priority={{ cinny_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ cinny_identifier }}.service={{ cinny_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ cinny_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ cinny_identifier }}.entrypoints={{ cinny_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ cinny_identifier }}.tls={{ cinny_container_labels_traefik_tls | to_json }}
{% if cinny_container_labels_traefik_tls %}
traefik.http.routers.{{ cinny_identifier }}.tls.certResolver={{ cinny_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ cinny_identifier }}.loadbalancer.server.port={{ cinny_container_http_port }}
{% endif %}

{% for arg in cinny_container_labels_additional_labels %}
{{ arg }}
{% endfor %}
