[Unit]
Description=Hydrogen ({{ hydrogen_identifier }})
{% for service in hydrogen_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in hydrogen_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ hydrogen_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ hydrogen_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ hydrogen_identifier }} \
      --log-driver=none \
      --user={{ hydrogen_uid }}:{{ hydrogen_gid }} \
      --cap-drop=ALL \
      --read-only \
      --network={{ hydrogen_container_network }} \
      {% if hydrogen_container_http_host_bind_port %}
      -p {{ hydrogen_container_http_host_bind_port }}:{{ hydrogen_container_http_port }} \
      {% endif %}
      --env-file={{ hydrogen_base_path }}/env \
      --label-file={{ hydrogen_base_path }}/labels \
      --mount type=bind,src={{ hydrogen_config_path }}/nginx.conf,dst=/etc/nginx/nginx.conf,ro \
      --mount type=bind,src={{ hydrogen_config_path }}/config.json,dst=/config.json.bundled,ro \
      {% for volume in hydrogen_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      --tmpfs=/tmp:rw,noexec,nosuid,size={{ hydrogen_container_tmpfs_tmp_size }} \
      {% for arg in hydrogen_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ hydrogen_container_image_self_build_name if hydrogen_container_image_self_build else hydrogen_container_image }}

{% for network in hydrogen_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ hydrogen_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ hydrogen_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ hydrogen_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ hydrogen_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ hydrogen_identifier }}

[Install]
WantedBy=multi-user.target
